---
import Main from "./Main.astro";
import Internal from "../components/Header/Internal.astro";
const { content, title, color, description, section, keywords, } = Astro.props;
---

<Main title={title ?? content.title} color={color} description={description} section={section} keywords={keywords}>
  <div class="container mx-auto p-4">
    <Internal />
    <div class={`prose prose-${content?.color ?? color} prose-sm sm:prose lg:prose-lg xl:prose-2xl mx-auto py-20`}>
      <h6 class={`sm:text-lg sm:leading-snug font-semibold tracking-wide uppercase text-${content?.color ?? color}-600
        mb-3`}>
        {content?.section ?? section}
      </h6>
      <h1>{content?.title ?? title}</h1>
      <slot />
    </div>
  </div>
</Main>
